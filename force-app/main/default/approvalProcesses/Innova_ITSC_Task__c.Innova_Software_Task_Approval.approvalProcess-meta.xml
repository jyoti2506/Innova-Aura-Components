<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>creator</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Owner</field>
        <field>Innova_Opened_Date__c</field>
        <field>Innova_Related_Case__c</field>
        <field>Innova_Status__c</field>
        <field>Innova_Subject__c</field>
        <field>Innova_Service_Request_Details__c</field>
        <field>Innova_Description__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>Innova_IT_Approval</name>
                <type>queue</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <booleanFilter>1 OR (2 AND 3)</booleanFilter>
            <criteriaItems>
                <field>Innova_ITSC_Task__c.Innova_IT_Approval__c</field>
                <operation>equals</operation>
                <value>True</value>
            </criteriaItems>
            <criteriaItems>
                <field>Innova_ITSC_Task__c.Innova_Subject__c</field>
                <operation>equals</operation>
                <value>Application Request for - Sharepoint</value>
            </criteriaItems>
            <criteriaItems>
                <field>Innova_ITSC_Task__c.Innova_Manager__c</field>
                <operation>equals</operation>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>GotoNextStep</ifCriteriaNotMet>
        <label>Approval for IT</label>
        <name>Approval_for_IT</name>
    </approvalStep>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>Innova_Manager__c</name>
                <type>relatedUserField</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <criteriaItems>
                <field>Innova_ITSC_Task__c.Innova_Subject__c</field>
                <operation>equals</operation>
                <value>Application Request for - Sharepoint</value>
            </criteriaItems>
            <criteriaItems>
                <field>Innova_ITSC_Task__c.Innova_Manager__c</field>
                <operation>notEqual</operation>
            </criteriaItems>
        </entryCriteria>
        <label>Manager</label>
        <name>Manager</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <emailTemplate>wkitsm__ITSCEmailNotifications/Innova_Solution_Approval_Email_Template</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <booleanFilter>1 OR 2</booleanFilter>
        <criteriaItems>
            <field>Innova_ITSC_Task__c.Innova_IT_Approval__c</field>
            <operation>equals</operation>
            <value>True</value>
        </criteriaItems>
        <criteriaItems>
            <field>Innova_ITSC_Task__c.Innova_Subject__c</field>
            <operation>equals</operation>
            <value>Application Request for - Sharepoint</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Isapproved0</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Status_is_approved0</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>true</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Isrejected0</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Status_is_Rejected0</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>submit_for_approval0</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Innova Software Task Approval</label>
    <nextAutomatedApprover>
        <useApproverFieldOfRecordOwner>false</useApproverFieldOfRecordOwner>
        <userHierarchyField>Manager</userHierarchyField>
    </nextAutomatedApprover>
    <processOrder>2</processOrder>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
