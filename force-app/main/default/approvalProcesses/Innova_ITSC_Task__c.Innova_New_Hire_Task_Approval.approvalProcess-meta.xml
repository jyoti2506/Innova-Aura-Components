<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>creator</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Owner</field>
        <field>Innova_Opened_Date__c</field>
        <field>Innova_Related_Case__c</field>
        <field>Innova_Status__c</field>
        <field>Innova_Subject__c</field>
        <field>Innova_Service_Request_Details__c</field>
        <field>Innova_Description__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>Innova_IT_Approval</name>
                <type>queue</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <criteriaItems>
                <field>Innova_ITSC_Task__c.Innova_IT_Approval__c</field>
                <operation>equals</operation>
                <value>True</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>GotoNextStep</ifCriteriaNotMet>
        <label>IT Approval</label>
        <name>IT_Approval</name>
    </approvalStep>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>Innova_Manager__c</name>
                <type>relatedUserField</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <criteriaItems>
                <field>Innova_ITSC_Task__c.Innova_Subject__c</field>
                <operation>equals</operation>
                <value>Application Request for - Sharepoint</value>
            </criteriaItems>
        </entryCriteria>
        <label>Manager</label>
        <name>Manager</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <emailTemplate>wkitsm__ITSCEmailNotifications/Innova_Solution_Approval_Email_Template</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <formula>ISPICKVAL(Innova_Related_Case__r.Innova_Service_Request_Trigger__c , &apos;Onboarding Request&apos;)  &amp;&amp; ( Innova_IT_Approval__c = True  ||  Innova_Subject__c = &apos;Application Request for - Sharepoint&apos;)</formula>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Isapproved</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Status_is_approved</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Isrejected</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Status_is_Rejected</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>submit_for_approval1</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Innova New Hire Task Approval</label>
    <nextAutomatedApprover>
        <useApproverFieldOfRecordOwner>false</useApproverFieldOfRecordOwner>
        <userHierarchyField>Manager</userHierarchyField>
    </nextAutomatedApprover>
    <processOrder>1</processOrder>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
