        <defaultConnectorLabel>Default Outcome</defaultConnectorLabel>
        <rules>
            <name>Yes1</name>
            <conditionLogic>(1 OR 2) AND 3</conditionLogic>
            <conditions>
                <leftValueReference>$Record.Innova_Brand1__c</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>Innova Solutions</stringValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>$Record.Innova_Brand1__c</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>HireGenics</stringValue>
                </rightValue>
            </conditions>
